<Application x:Class="SaveToGameWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SaveToGameWpf.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:InvertBoolConverter x:Key="InvertBoolConverter"/>
                    <converters:VisibleIfTrueConverter x:Key="VisibleIfTrueConverter"/>
                    <converters:VisibleIfFalseConverter x:Key="VisibleIfFalseConverter"/>
                    <converters:IconToVisibilityConverter x:Key="IconToVisibilityConverter"/>
                    <converters:DivideBy1024Converter x:Key="DivideBy1024Converter"/>
                    <converters:ByteToMbConverter x:Key="ByteToMbConverter"/>
                    <converters:NotNullParameterConverter x:Key="NotNullParameterConverter"/>
                </ResourceDictionary>
                <ResourceDictionary Source="Styles\VS\VSThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>     
    </Application.Resources>
</Application>
