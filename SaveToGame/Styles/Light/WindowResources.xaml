<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="Window_Background"                  Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Window_Border"                      Color="#007ACC" />
    <SolidColorBrush x:Key="Window_BorderInactive"              Color="#007ACC"/>
    <SolidColorBrush x:Key="Window_StatusForeground"            Color="#FFFFFF" />
    <SolidColorBrush x:Key="Window_StatusForegroundInactive"    Color="#FFFFFF" />
    <SolidColorBrush x:Key="Window_TitleBarBackground"          Color="#F5F5F5" />
    <SolidColorBrush x:Key="Window_Caption"                     Color="Black"/>
    
    <SolidColorBrush x:Key="Window_SpecialButtonNormal"         Color="Transparent"/>
    <SolidColorBrush x:Key="Window_SpecialButtonOver"           Color="White"/>
    <SolidColorBrush x:Key="Window_SpecialButtonPressed"        Color="#007ACC"/>

    <SolidColorBrush x:Key="Window_SpecialSymbolNormal"         Color="#007ACC"/>
    <SolidColorBrush x:Key="Window_SpecialSymbolOver"           Color="#0493E6"/>
    <SolidColorBrush x:Key="Window_SpecialSymbolPressed"        Color="White"/>

    <Color x:Key="Window_BorderShadow">#007ACC</Color>

</ResourceDictionary>