<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ListBox_BackgroundNormal" Color="{DynamicResource ContainerBackgroundNormal}"/>
    <SolidColorBrush x:Key="ListBox_BackgroundDisabled" Color="{DynamicResource ContainerBackgroundNormal}"/>

    <SolidColorBrush x:Key="ListBox_BorderNormal" Color="{DynamicResource BorderNormalColor}"/>
    <SolidColorBrush x:Key="ListBox_BorderDisabled" Color="{DynamicResource BorderNormalColor}"/>

</ResourceDictionary>