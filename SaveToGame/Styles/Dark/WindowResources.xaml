<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Window_Background"                  Color="#2D2D30"/>
    <SolidColorBrush x:Key="Window_Border"                      Color="#007ACC" />
    <SolidColorBrush x:Key="Window_BorderInactive"              Color="#007ACC"/>
    <SolidColorBrush x:Key="Window_StatusForeground"            Color="#FFFFFF" />
    <SolidColorBrush x:Key="Window_StatusForegroundInactive"    Color="#FFFFFF" />
    <SolidColorBrush x:Key="Window_TitleBarBackground"          Color="#2D2D30" />
    <SolidColorBrush x:Key="Window_Caption"                     Color="#999999"/>
    
    <SolidColorBrush x:Key="Window_SpecialButtonNormal"         Color="Transparent"/>
    <SolidColorBrush x:Key="Window_SpecialButtonOver"           Color="#3F3F41"/>
    <SolidColorBrush x:Key="Window_SpecialButtonPressed"        Color="#007ACC"/>

    <SolidColorBrush x:Key="Window_SpecialSymbolNormal"         Color="#F1F1F1"/>
    <SolidColorBrush x:Key="Window_SpecialSymbolOver"           Color="#F1F1F1"/>
    <SolidColorBrush x:Key="Window_SpecialSymbolPressed"        Color="#F1F1F1"/>

    <Color x:Key="Window_BorderShadow">#007ACC</Color>
</ResourceDictionary>