<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ScrollBar_ThumbNormal"              Color="#686868"/>
    <SolidColorBrush x:Key="ScrollBar_ThumbOver"                Color="#9E9E9E"/>
    <SolidColorBrush x:Key="ScrollBar_ThumbDragging"            Color="#EFEBEF"/>
    
    <SolidColorBrush x:Key="ScrollBar_LineBackgroundNormal"     Color="Transparent"/>
    <SolidColorBrush x:Key="ScrollBar_LineBackgroundOver"       Color="Transparent"/>
    
    <SolidColorBrush x:Key="ScrollBar_LineArrowNormal"          Color="#999999"/>
    <SolidColorBrush x:Key="ScrollBar_LineArrowOver"            Color="#1C97EA"/>
    <SolidColorBrush x:Key="ScrollBar_LineArrowPressed"         Color="{DynamicResource HighlitedColor}"/>
    <SolidColorBrush x:Key="ScrollBar_LineArrowDisabled"        Color="#BFBFBF"/>
    
    <SolidColorBrush x:Key="ScrollBar_Page"                     Color="Transparent"/>
    <SolidColorBrush x:Key="ScrollBar_BorderBackground"         Color="#3E3E42"/>
    
</ResourceDictionary>