        <member name="T:UsefulClasses.ShellIcon">
            <summary>
            Summary description for ShellIcon.  Get a small or large Icon with an easy C# function call
            that returns a 32x32 or 16x16 System.Drawing.Icon depending on which function you call
            either GetSmallIcon(string fileName) or GetLargeIcon(string fileName)
            </summary>
        </member>
        <member name="M:UsefulClasses.ShellIcon.GetSmallIcon(System.String)">
            <summary>
            Возвращяет маленькую иконку для файла
            </summary>
            <param name="fileName">Путь к файлу</param>
        </member>
        <member name="M:UsefulClasses.ShellIcon.GetLargeIcon(System.String)">
            <summary>
            Возвращяет большую иконку для файла
            </summary>
            <param name="fileName">Путь к файлу</param>
        </member>
        <member name="M:UsefulClasses.ShellIcon.IconToBitmapSource(System.Drawing.Icon)">
            <summary>
            Преобразует Icon в ImageSource
            </summary>
            <param name="icon">Иконка</param>
            <exception cref="T:System.ComponentModel.Win32Exception"></exception>
        </member>
